<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homelist_2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="-161dp"
        android:text="No. of Bathroom"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="100dp"
        android:text="Is the bathroom private?"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="182dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/app_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp"
        android:text="STEP 2 : Start with the basic"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="What kind of place are you listing?"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="341dp"
        android:layout_height="29dp"
        android:layout_above="@+id/typeofproperty"
        android:layout_alignStart="@+id/textView"
        android:text="Types of Accomodation"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeofproperty"
        android:layout_centerHorizontal="true"
        android:text="What will guest have?"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/guestaccomodation"
        android:layout_marginTop="-198dp"
        android:text="No. of Bedroom"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <Spinner
        android:id="@+id/typeofproperty"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView" />

    <Spinner
        android:id="@+id/guestaccomodation"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="198dp"
        android:layout_alignLeft="@+id/textView" />

    <Button
        android:id="@+id/next"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Next"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/imageView3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="169dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/textView2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/textView7"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/textView2" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:text="Yes"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton"
        android:layout_below="@+id/radioButton"
        android:text="No"
        android:layout_alignLeft="@+id/radioButton" />


</RelativeLayout>