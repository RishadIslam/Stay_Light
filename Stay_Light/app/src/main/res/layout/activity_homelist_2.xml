<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homelist_2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/background10">


    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title2"
        android:layout_marginTop="28dp"
        android:text="@string/step_2_start_with_the_basic"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/title2" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/what_kind_of_place_are_you_listing"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="@string/what_will_guest_have"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/guestaccomodation2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title1"
        android:layout_marginTop="170dp"
        android:layout_alignLeft="@+id/title1" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="209dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/title3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title3"
        android:layout_marginTop="210dp"
        android:text="@string/no_of_bathroom"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/noofbath"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/title2"
        android:layout_alignTop="@+id/title4"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/title2"
        android:autofillHints="" />

    <TextView
        android:id="@+id/title5"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title4"
        android:layout_marginBottom="243dp"
        android:text="@string/is_the_bathroom_private"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title6"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title5"
        android:layout_alignLeft="@+id/title5"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="147dp"
        android:text="@string/no_of_bedroom"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/noofbedroom"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title6"
        android:layout_alignLeft="@+id/title6"
        android:layout_alignEnd="@+id/title6"
        android:layout_alignRight="@+id/title6"
        android:layout_alignBottom="@+id/title6"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginEnd="-159dp"
        android:layout_marginRight="-159dp"
        android:layout_marginBottom="-12dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/next2"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title6"
        android:layout_alignRight="@+id/title6"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-145dp"
        android:layout_marginRight="-145dp"
        android:layout_marginBottom="89dp"
        android:text="@string/next"
        android:textAlignment="center" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="91dp"
        android:layout_height="84dp"
        android:layout_alignStart="@+id/title1"
        android:layout_alignLeft="@+id/title1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="153dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radioGroup1"
            android:text="NO"
            android:layout_alignRight="@+id/radioGroup1" />
    </RadioGroup>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/activity_drawer_home" />

</RelativeLayout>