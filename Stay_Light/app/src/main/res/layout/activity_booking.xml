<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booking"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/background3">

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Booking"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp">

        <ImageButton
            android:id="@+id/phoneEdit"
            android:layout_width="38dp"
            android:layout_height="47dp"
            android:layout_alignTop="@+id/mobile"
            android:layout_alignEnd="@+id/mobile"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-54dp"
            android:background="@drawable/edit"
            android:scaleType="fitCenter" />

        <EditText
            android:id="@+id/checkin"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="Check In"
            android:inputType="date"
            android:textAlignment="center"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="205dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="Check Out"
            android:inputType="date"
            android:textAlignment="center"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:id="@+id/noofrooms"
            android:layout_width="139dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="102dp"
            android:ems="10"
            android:textSize="18dp"
            android:hint="HOW MAY PERSON"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/adults"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/children"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="134dp"
            android:layout_marginRight="134dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Adult"
            android:inputType="number"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/children"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/noofrooms"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/checkin"
            android:layout_toRightOf="@+id/checkin"
            android:ems="10"
            android:hint="Children"
            android:inputType="number"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/email"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="309dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="307dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/adults"
            android:layout_alignEnd="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="262dp"
            android:ems="10"
            android:hint="Mobile No"
            android:inputType="phone"
            tools:ignore="Autofill,HardcodedText" />

    </RelativeLayout>


    <Button
        android:id="@+id/booking"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button"
        android:text="Book"
        android:textAllCaps="true"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</RelativeLayout>